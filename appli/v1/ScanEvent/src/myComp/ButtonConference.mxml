<?xml version="1.0" encoding="utf-8"?>
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:skins="skins.*" gap="0">
	<fx:Declarations>
		<!-- Placer ici les éléments non visuels (services et objets de valeur, par exemple). -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			
			[Bindable]
			public var date:String = "Date";
			
			[Bindable]
			public var titre:String = "Titre de la conférence";
			
			
			
		]]>
	</fx:Script>
	
	
	<s:Group width="50" height="100%" >
		<s:Rect width="100%" height="100%">
			<s:fill>
				<s:SolidColor color="0xE03629" />
			</s:fill>
		</s:Rect>
		<s:Label text="{date}" color="0xFFFFFF" verticalCenter="0" horizontalCenter="0" fontWeight="bold"/>
	</s:Group>
	<s:Rect width="4" height="100%">
		<s:fill>
			<s:SolidColor color="0xFFFFFF" />
		</s:fill>
	</s:Rect>
	<s:Button label="{titre}" width="{this.width - 54}" height="100%" skinClass="skins.ButtonArrow" buttonMode="true" />
	
</s:HGroup>
