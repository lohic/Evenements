RewriteEngine on
# RewriteRule ^archive-([a-z0-9]+)\.html$  index.php?organisme=$1  [L]
#
# cf http://www.expreg.com/memo.php
# QSA permet de garder les param√®tres GET

# on exclue les dossiers integration, admin
#RewriteRule ^integration - [L,NC]
#RewriteRule ^admin - [L,NC]


RewriteBase /Site_SCIENCESPO_EVENEMENTS/

# file
RewriteCond %{REQUEST_FILENAME} !-f
# directory
RewriteCond %{REQUEST_FILENAME} !-d
# symlink
RewriteCond %{REQUEST_FILENAME} !-l

RewriteRule ^(evenement|picasso|ceri|)(.+)$ index.php?organisme=$1&url=$2 [QSA,L]

# online
# RewriteRule ^(evenements-pprd|evenement|picasso|ceri|)(.+)$ index.php?organisme=$1&url=$2 [QSA,L]


